<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10sp">

        <TextView
            android:id="@+id/tv_trip_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="Date: 2025-02-28" />

        <TextView
            android:id="@+id/tv_vehicle_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vehicle Type: Car" />

        <TextView
            android:id="@+id/tv_product_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Line: Electronics" />

        <TextView
            android:id="@+id/tv_driver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Driver: John Doe" />

        <TextView
            android:id="@+id/tv_start_end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start: City A â†’ End: City B" />

        <TextView
            android:id="@+id/tv_cost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cost: $120.50" />

        <TextView
            android:id="@+id/tv_requester"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Requester: Jane Doe" />

        <TextView
            android:id="@+id/tv_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notes: Urgent delivery"
            android:textStyle="italic"
            android:textColor="@color/gray" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
