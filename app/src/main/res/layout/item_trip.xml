<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:padding="12dp"
    app:cardBackgroundColor="@color/cardBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/tv_trip_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Date:"
                android:textColor="@color/primaryText"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_product_line"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="PL: "
                android:textColor="@color/secondaryText"
                android:textSize="14sp"
                android:gravity="end" />
        </LinearLayout>

        <!-- Main Trip Info -->
        <TextView
            android:id="@+id/tv_driver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Driver: John Doe"
            android:textColor="@color/red"
            android:layout_marginBottom="2dp" />

        <TextView
            android:id="@+id/tv_vehicle_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vehicle Type: Car"
            android:textColor="@color/primaryText"
            android:layout_marginBottom="2dp" />

        <!-- Route Info -->
        <TextView
            android:id="@+id/tv_start_end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start: City A â†’ End: City B"
            android:textColor="@color/accentColor"
            android:textStyle="bold"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp" />

        <!-- Cost -->
        <TextView
            android:id="@+id/tv_cost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cost: $120.50"
            android:textColor="@color/costColor"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <!-- Requester -->
        <TextView
            android:id="@+id/tv_requester"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Requester: Jane Doe"
            android:textColor="@color/secondaryText"
            android:layout_marginBottom="4dp" />

        <!-- Notes -->
        <TextView
            android:id="@+id/tv_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notes: Urgent delivery"
            android:textColor="@color/noteText"
            android:textStyle="italic"
            android:background="@color/noteBackground"
            android:padding="4dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>